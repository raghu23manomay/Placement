@model  IEnumerable<mvc.Models.MailTemplate>
@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html

@{
    ViewBag.Title = "IndexFotMailTemplateMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    System.Data.DataTable dt = new System.Data.DataTable();
    dt = Session["UserPermission"] as System.Data.DataTable;
}
<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search Template" id="txtName" name="txtName" autocomplete="off">
                <span class="input-group-addon">
                    <i class="fa fa-search" name="btnnameSearch" id="btnnameSearch"></i>
                </span>
            </div>
        </div>
        <div class="col-sm-3">
            <h2>Mail Template List</h2>
        </div>
        <div class="col-sm-offset-7">
            @{
                System.Data.DataRow[] HeadingFields = dt.Select("submenuname = 'TemplateMaster' and FeatureName = 'Create'");
                if (HeadingFields[0].ItemArray[6].ToString() == "1")
                {
                    @Html.ActionLink("Add New Template", "MailTemplateMaster", "Master",null,
                       new Dictionary<string, object>
                    {
                        { "class", "btn btn-danger pull-right m-r-sm" },
                        { "data-toggle" , "modal"},
                        { "data-target", "#mdlAddMailTemplateMaster"},
                        { "title", "New Template Master"}

                    })
                }
            }

        </div>

        <div id="mdlAddMailTemplateMaster" style="margin-left: 20%;width: 60%;" class="modal fade" data-backdrop="static" data-keyboard="false" role="dialog">
        </div>
    </div>
</div>
<div class="container m-t-md">
    <div class="row">
        <div id="grid1" class="col-sm-12">
            @Html.Partial("_MailTemplateList")
        </div>

        <div class="col-sm-10">
            <div class="container m-t-md">
                <div class="row">
                    <div class="col-sm-12">

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

