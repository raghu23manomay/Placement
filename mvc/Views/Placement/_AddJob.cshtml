                                            @Html.ValidationMessageFor(model => model.NoticePeriod, "", new { @class = "text-danger" })
                                            <div class="text-danger" id="Notice_Period_error_msg"></div>
                                        </div>


                                    </div>
                                </div>


                            </fieldset>
                            <fieldset>
