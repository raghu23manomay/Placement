                    }
                    else {
                        $('#Role_Resp_error_msg').hide();
                    }

                    if ($('#KnowledgeSkill').val() == 0) {
                        error = 1;
                        $('#Knowledge_Skill_error_msg').html(" please Enter knowdge and skills.");
                        $('#Knowledge_Skill_error_msg').show();
                    }
                    else {
                        $('#Knowledge_Skill_error_msg').hide();
                    }

                    if ($('#ReqTitle').val() == '') {
