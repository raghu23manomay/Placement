@model  IEnumerable<mvc.Models.DesignationList>

@{
    ViewBag.Title = "PageGrid";
}

@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html
@{

    System.Data.DataTable dt = new System.Data.DataTable();
    dt = Session["UserPermission"] as System.Data.DataTable;
}
<style>
    .grid-header-title {
        color: #908a9c;
        font-size: 12px;
        font-weight: 400;
    }
</style>



<div class="row">

    <div class="col-sm-3">
        <label class="fl">Designation name <i class="fa fa-fw fa-sort"></i></label>
    </div>
    <div class="col-sm-2">
        <label class="fl">Oprations<i class="fa fa-fw fa-sort"></i></label>
    </div>

</div>

@foreach (var item in Model)
{


    <div class="ibox m-t-xs border-left-blue">
        <div class="row">

            <div class="col-sm-2">

                <div>@item.desg_desc </div>


            </div>
            <div class="col-sm-2 ">
                @*<a href="@Url.Action("edit", "Master",new { @desig_id=@item.desig_id})" data-toggle="modal" data-target="#mdlAddDesignation" class="dropdown-item1 ember-view"> <i class="fa fa-pencil-square-o m-r-sm" style="font-size:20px;color:orange" aria-hidden="true"></i><span></span></a>*@
                <div class="btn-group m-t-xs7  pull-right ">
                    <button type="button" class="btn dropdown btn-dot-dropdown" data-toggle="dropdown"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></button>
                    <div id="candidateActn" class="dropdown-menu is-right-aligned">
                        @{
                            System.Data.DataRow[] HeadingFields = dt.Select("submenuname = 'DesignationMaster' and FeatureName = 'Update'");
                            if (HeadingFields[0].ItemArray[6].ToString() == "1")
                            {
                                <a href="@Url.Action("Edit", "Master", new { @desig_id = item.desig_id})" data-toggle="modal" data-target="#mdleditDesignation" class="dropdown-item ember-view"> <i class="fa fa-pencil-square-o m-r-sm" aria-hidden="true"></i><span>Edit Designation</span></a>
                            }
                        }


                    </div>
                </div>

            </div>

        </div>
    </div>


}
<div class="row">
    <div class="col-sm-12 ">
        <div class="pnl-pagination m-b-md1">
            <div class="pull-right">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("IndexForDesignation", "Master", new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { MaximumPageNumbersToDisplay = 4, DisplayPageCountAndCurrentLocation = true }, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "mgrid", OnComplete = "PagedOnComplete" }))
                @if (Model.Count() == 0)
                {
                    <ul class="pagination pull-right"></ul>

                }
            </div>
        </div>
    </div>
</div>
<div id="mdleditDesignation" class="modal fade" data-backdrop="static" data-keyboard="false" role="dialog">
</div>

<div id="mdlSourceCandidate" class="modal fade" style="margin-left:20%;padding-top:50px;width: 60%;" data-backdrop="static" data-keyboard="false" role="dialog">
</div>
<div id="mdlActivity" class="modal fade" style="margin-left:20%;padding-top:50px;width: 60%;" data-backdrop="static" data-keyboard="false" role="dialog">
</div>
<div id="mdlSchedule" class="modal fade" style="margin-left:10%;padding-top:50px;width: 80%;" data-backdrop="static" data-keyboard="false" role="dialog">
</div>
<div id="mdlEditSchedule" class="modal fade" style="margin-left:10%;padding-top:50px;width: 80%;" data-backdrop="static" data-keyboard="false" role="dialog">
</div>
<div id="mdlCandidateActivity" class="modal fade" style="margin-left:20%;padding-top:50px;width: 60%;" data-backdrop="static" data-keyboard="false" role="dialog">
</div>


