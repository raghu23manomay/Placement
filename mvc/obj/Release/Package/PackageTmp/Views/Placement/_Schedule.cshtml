<script src="~/Scripts/toastr.js"></script>
<script src="~/Scripts/toastr.min.js"></script>

<script>

    $(document).ready(function () {

        $('#btnsave').on('click', function (e) {
            
            var error = 0;
            if ($('#Remark').val() == '') {
                error = 1;
                $('#Remark_error_msg').html("The Remark field is required.");
                $('#Remark_error_msg').show();
            }
            else {
                $('#Remark_error_msg').hide();
            }

            if ($('#StageName').val() == '') {
                error = 1;
                $('#StageName_error_msg').html("The StageName field is required.");
                $('#StageName_error_msg').show();
            }
            else {
                $('#StageName_error_msg').hide();
            }

            if ($('#ModeName').val() == '') {
                error = 1;
                $('#ModeName_error_msg').html("The StageName field is required.");
                $('#ModeName_error_msg').show();
            }
            else {
                $('#ModeName_error_msg').hide();
            }
            var ActivityDate = $("#ActivityDate").val();
            if (error) {
                return false;
            } else {

                $.ajax({
                    type: "POST",
                    cache: false,
                    url: "/Placement/Schedule",
                    data: {
                        "StageID": $("#NextStageID").val(),
                        "ModeID": $("#ModeName").val(),
                        "Remark": $("#Remark").val(),
                        "ReqID": $("#ReqID").val(),
                        "CandID": $("#CandID").val(),
                        "StatusID": $("#candStatus").val(),
                        "ActivityDate": $("#ActivityDate").val(),
                        "ActivityTime": $("#ActivityTime").val()
                    },
                    success: function (result) {
                        //$("#pnl-mdlSchedule").html(result);
                        
                        toastr.success("Data saved successfully.");
                        $("#mdlSchedule .close").click()                     
                        refresh();
                       
                    },
                    error: function (errorData) {
                    }
                });
            }
            return true;
        });

        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "onclick": null,
            "showDuration": "0",
            "hideDuration": "0",
            "timeOut": "0",
            "showMethod": "fadeIn"
        };

        $.ajax({
            url: "@Url.Action("GetTemplateData", "Placement")",
            data: {
                "CandID": $("#CandID").val(),
                "templateid": $('#msgTemplate').val(),

            },
            success: function (data) {
                $('#mailTemplateData').html(data);
            }
        });

        $('#sendmail').on('click', function (e) {
         
            var candid = $("#CandID").val();
            $.ajax({
                type: "POST",
                cache: false,
                url: "/Placement/sendmail",
                data: {
                    "candID": candid,
                    "Description": JSON.stringify($("#mailDescription").val()),
                    msgTemplate: $("#msgTemplate").val()
                },
                success: function (result) {
                    toastr.success("mail sent successfully.");
                    if (result.Success) {
                    }
                },
                error: function (errorData) {
                }
            });
        });

        $('#chkmail').on('click', function (e) {
            $('#mailBlock').show();

        });
        $('#Editmail').on('click', function (e) {

            $('#content').hide();
            $('#maildescriptionDiv').show();
            $('#tblHistory').show();
        });
        $('#Previewmail').on('click', function (e) {

            $('#content').show();
            $('#maildescriptionDiv').hide();
            $('#tblHistory').hide();

        });
        $('#msgTemplate').change(function (e) {
            e.stopImmediatePropagation();
            e.preventDefault();

            var cid = $("#CandID").val();

            var dd = $('#ActivityDate').val().substr(0,10);
            var abc = new Date(dd);
            var ActivityDate = abc.toString().substr(0,15);
            //alert(ActivityDate);
            var ActivityTime = $('#ActivityTime').val();

                $.ajax({
                    url: "@Url.Action("GetTemplateData", "Placement")",
                    data: {
                        "candID": cid,
                        "templateid": $('#msgTemplate').val(),
                        "ActivityDate": ActivityDate,
                        "ActivityTime": ActivityTime,
                        "ModeOfInterview": $("#ModeName").val(),
                    },
                    success: function (data) {
                        
                        $('#mailTemplateData').html(data);
                        var ActivityDate = $('#ActivityDate').val()
                        var ActivityTime = $('#ActivityTime').val()
                        
                    }
                });

        });
    });


    function refresh() {
     //   refreshjs();
                  $.ajax({
                    url: "@Url.Action("LoadData", "Placement")",
                    contentType: "application/json",
                      data: JSON.stringify({
                          page: con,
                          PageRowNumber: $('#Status').val(),
                          Name: $('#txtName').val(),
                          DName: $('#txtDesignation').val(),
                          CName: $('#txtClient').val(),
                          Eid: $('#txtEmail').val(),
                          Mob: $('#txtMobile').val(),
                          Stage: $('#txtStage').val(),
                          Date: $('#txtDate').val(),
                          Activity: $('#txtActivity').val()
                      }),
                    dataType: "text",
                    type: "POST",
                    async: true,
                    success: function (data) {
                        $('#grid1').html(data);
                        $('.modal-backdrop').remove();
                        $('#mymodal').hide();

                    },
                    error: function (data) {
                        
                        $('.modal-backdrop').remove();

                    },
                    complete: function () {
                        
                        $('.modal-backdrop').remove();


                    }

        });
       return true;

    }

    function refreshforclosebutton() {
       // refreshjs();
               // $('#pageLoader').show();

                $.ajax({
                    url: "@Url.Action("LoadData", "Placement")",
                    contentType: "application/json",
                    data: JSON.stringify({
                        page: con,
                        PageRowNumber: $('#Status').val(),
                        Name: $('#txtName').val(),
                        DName: $('#txtDesignation').val(),
                        CName: $('#txtClient').val(),
                        Eid: $('#txtEmail').val(),
                        Mob: $('#txtMobile').val(),
                        Stage: $('#txtStage').val(),
                        Date: $('#txtDate').val(),
                        Activity: $('#txtActivity').val()
                    }),
                    dataType: "text",
                    type: "POST",
                    async: true,
                    success: function (data) {
                        $('#grid1').html(data);
                       
                        $("#mdlSchedule .close").click();
                        $('.modal-backdrop').remove();


                    },
                    error: function (data) {
                        $("#mdlSchedule .close").click();
                        $('.modal-backdrop').remove();


                    },
                    complete: function () {                        
                        $("#mdlSchedule .close").click();
                        $('.modal-backdrop').remove();

                    }


        });
        return true;

    }
         
</script>





