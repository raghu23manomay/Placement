
@model IEnumerable<mvc.Models.ActivityDetails>

@{
    ViewBag.Title = "Candidate";
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmc" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" onclick="refreshforclosebutton()" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">  Activity  </h3>
        </div>
        <div>
            <div>
                @if (Model.Count() != 0 && Model!=null)
                { 
                    @Html.Hidden("ReqId", Model.First().StageID.ToString(), new { id = "ReqId" })
                    
                        <div class="ibox m-t-xs border-left-blue">

                            <div class="row alert alert-warning">
                                <div class="col-sm-3" style="text-align:left">
                                    Activity Name 
                                </div>
                                <div class="col-sm-3 round">
                                    Remark
                                </div>

                                <div class="col-sm-3">
                                    Stage 
                                </div>
                                <div class="col-sm-3">
                                    Activity Date
                                </div>
                            </div>
                            @foreach (var item in Model)
                            {
                            <div class="row alert alert-success"> 
                                <div class="col-sm-3" style="text-align:left">  
                                       @item.ActivityName 
                                </div>
                                <div class="col-sm-3 round"> 
                                   @item.Remark 
                                </div>

                                <div class="col-sm-3">
                                    <label>@item.StageName </label>
                                    </div>
                                <div class="col-sm-3">
                                    <label>@item.CreatedDate</label>
                                </div>
                            </div>
                            }
                        </div> 
                }
                else
                {
                    <div class="col-sm-12">
                        <div class="alert alert-warning">
                            No Activity found
                        </div>
                    </div>
                }

            </div>
            <div class="modal-footer">
                
                <button type="button" class="btn btn-default" onclick="refreshforclosebutton()" >ok</button>
            </div>
        </div>
    </div>
}
 
